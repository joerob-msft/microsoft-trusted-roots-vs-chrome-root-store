<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trusted Roots vs Chrome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrustedRootsVsChrome.Web.styles.css" asp-append-version="true" />
</head>
@{
    var currentPath = Context.Request.Path.Value ?? string.Empty;
}
<body>
    <header class="app-header">
        <div class="container">
            <nav class="app-nav" aria-label="Main navigation">
                <a class="brand" asp-area="" asp-page="/Index">Trusted Roots vs Chrome</a>
                <div class="nav-links">
                    <a asp-area="" asp-page="/Index" class="@((string.Equals(currentPath, "/", System.StringComparison.OrdinalIgnoreCase) || string.Equals(currentPath, "/Index", System.StringComparison.OrdinalIgnoreCase)) ? "active" : null)">Dashboard</a>
                    <a asp-area="" asp-page="/ProgramCertificates" class="@((string.Equals(currentPath, "/ProgramCertificates", System.StringComparison.OrdinalIgnoreCase)) ? "active" : null)">Microsoft catalog</a>
                    <a asp-area="" asp-page="/ChromeCertificates" class="@((string.Equals(currentPath, "/ChromeCertificates", System.StringComparison.OrdinalIgnoreCase)) ? "active" : null)">Chrome catalog</a>
                    <a asp-area="" asp-page="/Privacy" class="@(string.Equals(currentPath, "/Privacy", System.StringComparison.OrdinalIgnoreCase) ? "active" : null)">Privacy</a>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <span>&copy; @DateTime.UtcNow.Year Trusted Roots vs Chrome.</span>
            <span>Built for Azure App Service on Windows.</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>